<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.simon.moneymanager.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="de.simon.moneymanager.Perspective"
            id="MoneyManager.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="moneymanager.investmentsentryview"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true"
               visible="true">
         </view>
          <view
               closeable="false"
               id="moneymanager.investmentsview"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Money Manager Eingabe"
            class="de.simon.moneymanager.views.InvestmentAddView"
            id="moneymanager.investmentsentryview">
      </view>
      <view
            class="de.simon.moneymanager.views.CategoryView"
            id="MoneyManager.CategoryView"
            name="Kategorie Eingabe"
            restorable="true">
      </view>
      <view
            class="de.simon.moneymanager.views.CategoryOverview"
            id="MoneyManager.CategoryOverview"
            name="CategoryOverview"
            restorable="true">
      </view>
      <view
            class="de.simon.moneymanager.views.InvestmentsView"
            id="moneymanager.investmentsview"
            name="Investments View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="MoneyManager.application"
            name="Money Manager">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Money Manager">
         </property>
      </product>
   </extension>

</plugin>
